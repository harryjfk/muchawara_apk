<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_message_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="40dp"
    android:paddingRight="20dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <ImageView
        android:id="@+id/img_online"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:layout_marginRight="10dp"
        android:src="@drawable/circle_white"
        android:tint="@color/yellow"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="120dp"
            android:orientation="vertical"
            >

            <cu.inmobile.wara.Utils.BebasTextView
                android:id="@+id/tv_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/orange"
                android:text="MANGO"
                />

            <cu.inmobile.wara.Utils.BebasTextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:textSize="16sp"
                android:textColor="@color/black_text_color"
                android:text="MANGO"
                />

            <cu.inmobile.wara.Utils.RalenwayTextView
                android:id="@+id/tv_last_message_unread"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:maxLines="2"
                android:textColor="@color/black_text_color"
                android:textStyle="bold"
                android:text="Este es ekl último mensaje enviado por este usuario"
                />

            <cu.inmobile.wara.Utils.RalenwayTextView
                android:id="@+id/tv_last_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:maxLines="2"
                android:textColor="@color/grey_text_color"
                android:text="Este es ekl último mensaje enviado por este usuario"
                android:visibility="gone"
                />



            </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/user_profile"
            android:layout_marginRight="16dp" />



    </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="3dp"
        android:alpha=".05"
        android:background="@android:color/black" />

</LinearLayout>