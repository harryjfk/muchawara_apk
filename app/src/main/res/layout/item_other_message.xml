<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="1dp">

    <me.himanshusoni.chatmessageview.ChatMessageView
        android:id="@+id/chatMessageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        app:cmv_arrowGravity="start"
        app:cmv_arrowPosition="left"
        app:cmv_backgroundColor="@color/dialog_chat"
        app:cmv_backgroundColorPressed="#ff00bcd4"
        app:cmv_contentPadding="8dp"
        app:cmv_cornerRadius="8dp"
        app:cmv_showArrow="false">

        <cu.inmobile.wara.Utils.RalenwayTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello"
            android:layout_marginRight="25dp"
            android:textColor="@color/black_text_color"
            style="@style/TextChatMessageStyle"
            />
    </me.himanshusoni.chatmessageview.ChatMessageView>

</LinearLayout>