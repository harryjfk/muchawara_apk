<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cu.inmobile.wara.Activities.ChatHistoryActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_chat_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"/>


    <LinearLayout
        android:id="@+id/ll_not_messages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tooth"
            android:tint="@color/yellow"
            android:layout_marginBottom="30dp"

            />

        <cu.inmobile.wara.Utils.BebasTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/orange"
            android:text="@string/text_chat_no_msg"
            />

        <cu.inmobile.wara.Utils.RalenwayTextView
            android:id="@+id/tv_time_to_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black_text_color"
            android:text="@string/text_chat_no_msg_hint"
            />

        <Button
            android:id="@+id/btn_back_wara"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:textAllCaps="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawablePadding="10dp"
            android:background="@drawable/rounded_corner_btn_white"
            android:text="@string/btn_finding"
            android:textColor="@color/orange" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/black_100"
        android:elevation="3dp"
        >


    <ImageView
        android:id="@+id/img_back"
        android:layout_width="32dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/ic_back"
        android:tint="@color/orange"
        />

    <ImageView
        android:id="@+id/img_toolbar_logo"
        android:src="@drawable/ic_tooth"
        android:tint="@color/orange"
        android:layout_marginLeft="12dp"
        style="@style/ToolbarImgStyle"
        />

    <cu.inmobile.wara.Utils.BebasTextView
        android:id="@+id/tv_title_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textSize="26sp"
        android:textColor="@color/orange"
        android:text="CHAT"
        android:drawablePadding="12dp"
        />
    </LinearLayout>




</RelativeLayout>
